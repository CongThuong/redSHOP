<?xml version="1.0" encoding="utf-8"?>
<extension version="3.5.1" type="plugin" group="redshop_pdf" method="upgrade">
    <name>PLG_REDSHOP_PDF_TCPDF</name>
    <version>1.1.0</version>
    <redshop>2.0.0</redshop>
    <creationDate>July 2017</creationDate>
    <author>redCOMPONENT.com</author>
    <authorEmail>email@redcomponent.com</authorEmail>
    <authorUrl>www.redcomponent.com</authorUrl>
    <copyright>(C) 2016 redCOMPONENT.com</copyright>
    <license>GNU/GPL</license>
    <description>PLG_REDSHOP_PDF_TCPDF_DESC</description>
    <files>
        <filename plugin="tcpdf">tcpdf.php</filename>
        <folder>helper</folder>
    </files>
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.plg_redshop_pdf_tcpdf.ini</language>
        <language tag="en-GB">en-GB/en-GB.plg_redshop_pdf_tcpdf.sys.ini</language>
    </languages>
    <config addfieldpath="/libraries/redshop/form/fields">
        <fields name="params">
            <fieldset name="basic">
                <field
                        name="fontPDF"
                        type="list"
                        class="btn-group"
                        default="1"
                        label="PLG_FONT_PDF_LABEL"
                        description="PLG_FONT_PDF_LABEL_DESC">
                    <option value="courier">Courier</option>
                    <option value="courierB">Courier Bold</option>
                    <option value="courierBI">Courier Bold Italic</option>
                    <option value="courierI">Courier Italic</option>
                    <option value="helvetica">Helvetica</option>
                    <option value="helveticaB">Helvetica Bold</option>
                    <option value="helveticaBI">Helvetica Bold Italic</option>
                    <option value="helveticaI">Helvetica Italic</option>
                    <option value="symbol">Symbol</option>
                    <option value="times">Times New Roman</option>
                    <option value="timesB">Times New Roman Bold</option>
                    <option value="timesBI">Times New Roman Bold Italic</option>
                    <option value="timesI">Times New Roman Italic</option>
                    <option value="zapfdingbats">Zapf Dingbats</option>
                </field>
            </fieldset>
        </fields>
    </config>
    <scriptfile>install.php</scriptfile>
</extension>
